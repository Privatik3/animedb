<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="domain.AnimeGenreEntity" table="anime_genre" schema="" catalog="mydb">
        <id name="id">
            <column name="id" sql-type="int" not-null="true"/>
        </id>
        <many-to-one name="animeByAnimeId" class="domain.AnimeEntity">
            <column name="Anime_id" not-null="true"/>
        </many-to-one>
        <many-to-one name="genresByGenresId" class="domain.GenresEntity">
            <column name="genres_id" not-null="true"/>
        </many-to-one>
    </class>
</hibernate-mapping>