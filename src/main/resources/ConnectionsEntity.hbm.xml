<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="domain.ConnectionsEntity" table="connections" schema="" catalog="mydb">
        <id name="id">
            <column name="id" sql-type="int" not-null="true"/>
        </id>
        <property name="idConnection">
            <column name="id_connection" sql-type="varchar" length="45"/>
        </property>
        <property name="text">
            <column name="text" sql-type="varchar" not-null="true"/>
        </property>
        <many-to-one name="animeByAnimeId" class="domain.AnimeEntity">
            <column name="Anime_id" not-null="true"/>
        </many-to-one>
    </class>
</hibernate-mapping>