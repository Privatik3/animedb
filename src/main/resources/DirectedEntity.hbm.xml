<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="animedb.domain.DirectedEntity" table="directed" schema="" catalog="my_db">
        <id name="id">
            <column name="id" sql-type="int" not-null="true"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar" length="45" not-null="true"/>
        </property>
        <property name="resources">
            <column name="resources" sql-type="varchar"/>
        </property>
        <set name="animesesById" inverse="true">
            <key>
                <column name="directed_id" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="animedb.domain.AnimesEntity"/>
        </set>
    </class>
</hibernate-mapping>