<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="domain.ProductionEntity" table="production" schema="" catalog="mydb">
        <id name="id">
            <column name="id" sql-type="int" not-null="true"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar" not-null="true"/>
        </property>
        <set name="animesById" inverse="true">
            <key>
                <column name="production_id" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="domain.AnimeEntity"/>
        </set>
    </class>
</hibernate-mapping>