<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="home.privatik.domain.ScreenshotsEntity" table="screenshots" schema="" catalog="mydb">
        <id name="id">
            <column name="id" sql-type="int" not-null="true"/>
        </id>
        <property name="url">
            <column name="url" sql-type="varchar" not-null="true"/>
        </property>
        <property name="animeId">
            <column name="anime_id" sql-type="int" not-null="true"/>
        </property>
        <many-to-one name="animeByAnimeId" class="home.privatik.domain.AnimeEntity">
            <column name="anime_id" not-null="true"/>
        </many-to-one>
    </class>
</hibernate-mapping>